{
  "mcpServers": {
    "indicators": {
      "type": "stdio",
      "command": "indicators-mcp",
      "env": {
        "INDICATORS_MCP_PREVIEW_ROWS": "8"
      }
    },

    "strategy-research": {
      "type": "stdio",
      "command": "strategy-research-mcp",
      "env": {
        "RESEARCH_USER_AGENT": "EevaResearchBot/1.0",
        "RESEARCH_MAX_CONCURRENCY": "3",
        "OLLAMA_BASE": "http://127.0.0.1:11434",
        "OLLAMA_MODEL": "qwen2.5:14b-instruct",
        "OLLAMA_MODEL_FALLBACK": "llama3.1:8b-instruct",
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },

    "kg": {
      "type": "stdio",
      "command": "python",
      "args": ["-m", "src.mcp.kg_server"],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "GRAPHDB_URL": "http://localhost:7200",
        "GRAPHDB_REPOSITORY": "mcp_kg",
        "GRAPHDB_USERNAME": "admin",
        "GRAPHDB_PUSH": "true",
        "KG_ENTITY_ONLY": "true",
        "KG_ONTOLOGY_PATH": "src/kg/ontology/mcp-core.ttl",
        "KG_SHAPES_PATH": "src/kg/ontology/mcp-crypto.ttl",
        "KG_LABELS_DIR": "outputs/run_simple/labels",
        "KG_DOCS_DIR": "outputs/run_simple/docs"
      }
    },

    "rag": {
      "type": "stdio",
      "command": "python",
      "args": ["-m", "src.mcp.rag_server"],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "CHROMA_DIR": ".chroma",
        "CHROMA_COLLECTION": "whitepapers",
        "RAG_OUTPUTS_DIR": "outputs/run_simple",
        "RAG_EXPAND_PER_ENTITY": "true",
        "OLLAMA_BASE": "http://127.0.0.1:11434",
        "OLLAMA_EMBED_MODEL": "nomic-embed-text"
      }
    }
  },

  "mcpTools": {
    "kg": [
      "validate_labels",
      "push_labels",
      "sparql_query",
      "sparql_update",
      "list_documents",
      "get_chunk",
      "server.config"
    ],
    "rag": [
      "rag.search",
      "rag.reindex",
      "rag.embed_and_index",
      "rag.delete",
      "rag.health",
      "rag.qa",
      "server.config"
    ],
    "indicators": [
      "indicator.list",
      "indicator.describe",
      "indicator.compute"
    ],
    "strategy-research": [
      "plan_queries",
      "brave_search",
      "arxiv_search",
      "ssrn_search",
      "ideas_search",
      "fetch_url",
      "extract_strategies",
      "normalize_strategy",
      "bundle_results"
    ]
  }
}
